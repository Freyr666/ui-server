(jbuild_version 1)

(library
 ((name        boards)
  (public_name boards)
  (synopsis "boards common")
  (libraries (lwt containers yojson ppx_deriving_yojson.runtime common components api))
  (flags (:standard -short-paths -strict-sequence -bin-annot
          -thread -w "+1..49+60" -w "+a-4-7-23-33-39-40-41-42-44-45-48"))
  (preprocess (pps (ppx_deriving.eq ppx_deriving_yojson)))))

(rule
 ((targets (common_types.ml))
  (deps (../common_types.ml))
  (action (copy ${<} ${@}))))
